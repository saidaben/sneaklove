<div class="big-container product-manage-wrapper flexed-item">
  <form method="post" action="/product_edit/{{sneaker._id}}" class="edit-product-form">
    <h3 class="form-title"> Edit Sneaker</h3>
    <div class="form-item-wrapper flexed-item">

      <label for="name" class="label-name label">Model name</label>
      <input id="name" type="text" name="name" class="input-text input" placeholder="Nike Air Max 90" value="{{sneaker.name}}">
    </div>

    <div class="form-item-wrapper flexed-item">
      <label for="ref" class="label-ref label">RÃ©f.</label>
      <input id="ref" type="text"  name="ref" class="input-text input" placeholder="ex: NV23498" value="{{sneaker.ref}}">
    </div>

    <div class="form-item-wrapper flexed-item">
      <label for="size" class="label-ref label">Size</label>
      <input id="size" type="number" name="size" class="input-text input" placeholder="ex: 37" value="{{sneaker.size}}">
    </div>

    <div class="form-item-wrapper flexed-item">
      <label for="description" class="label-descr label">Description</label>
      <input id="description" type="text" name="desciption"class="input-text input" placeholder="The better sneakers to run" value="{{sneaker.description}}">
    </div>

    <div class="form-item-wrapper flexed-item">
      <label for="price" class="label-price label">Price</label>
      <input id="price" type="number" name="price" class="sneaker-price input" min="1" value="{{sneaker.price}}">
    </div>

    <div class="form-item-wrapper flexed-item">
      <label for="category" class="label-main-cat label">Main category</label>
      <select id="category" class="select" required name="category">
        <option value="sneaker." disabled selected>Choose main Category...</option>
        <option value="men">Men</option>
        <option value="women">Women</option>
        <option value="kids">Kids</option>
      </select>
    </div>

    <div class="form-item-wrapper flexed-item">
      <label class="label">Tags</label>
      {{> form_tags_select}}
    </div>

    <button class="button-primary add-sneaker-btn">Edit this sneaker</button>
  </form>
</div>